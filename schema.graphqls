type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Account {
  dropletLimit: Int!
  volumeLimit: Int!
  email: String!
  uuid: String!
  emailVerified: Boolean!
  status: String!
}

type Query {
  todos: [Todo!]!
  account: Account
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
